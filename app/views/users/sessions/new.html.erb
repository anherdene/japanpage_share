<div class="container-footer">
  <h2>Login </h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>


      <div class="clearfix">
        <%= f.label :email %>
        <div class="input">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :password %>
        <div class="input">
          <%= f.password_field :password %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="clearfix">
            <%= f.label :remember_me %>
            <div class="input">
              <%= f.check_box :remember_me, :class => "checkbox" %> If checked, your user session will be saved
            </div>
          </div>
      <% end -%>

      <div class="row">
        <div class="span8 offset2">
          <%= f.submit "Sign in", :class =>"btn primary" %>
        </div>
      </div>
  <% end %>

  <div class="pull-left">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>